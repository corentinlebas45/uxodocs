<?xml version="1.0" encoding="UTF-8"?>

<beans default-lazy-init="true" default-autowire="no"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<!-- xml imported by ARender Java Web Server side for our own customizations, please do not modify this file -->
	
	<!-- Configuration of the HMI plugins -->
	<bean id="MFilesURLParser" class="com.arondor.arender.mfiles.server.urlparser.MFilesURLParser">
		<property name="authenticationType">
			<value type="com.arondor.arender.mfiles.utils.AuthenticationType">${arender.mfiles.authentication.type}</value>
		</property>
		<property name="mfwsURL" value="${arender.mfiles.web.url}" />
	</bean>
	
	<bean id="clientService"
		class="com.arondor.arender.mfiles.service.MFilesClientService"
		scope="singleton">
		<property name="mfwsURL" value="${arender.mfiles.web.url}" />
		<property name="mfwsToken" value="${arender.mfiles.authentication.token}" />
		<property name="authentication" ref="authentication" />
		<property name="authenticationType">
			<value type="com.arondor.arender.mfiles.utils.AuthenticationType">${arender.mfiles.authentication.type}</value>
		</property>
	</bean>
	
	<bean id="authentication"
		class="com.arondor.arender.mfiles.data.Authentication">
		<property name="username" value="${arender.mfiles.authentication.username}" />
		<property name="password" value="${arender.mfiles.authentication.password}" />
		<property name="vaultGuid" value="${arender.mfiles.authentication.vaultGuid}" />	
	</bean>
</beans>

